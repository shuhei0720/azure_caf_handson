{
  "name": "Azure CAF Handson",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-bicep",
        "ms-vscode.azurecli",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-vscode.azure-account",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "bierner.markdown-mermaid",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[bicep]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-bicep"
        }
      }
    }
  },
  "postCreateCommand": "az bicep install && npm install -g @azure/static-web-apps-cli",
  "postStartCommand": "if [ -f .env ]; then echo 'source .env' >> ~/.bashrc; fi",
  "remoteUser": "vscode",
  "forwardPorts": [3000, 8080]
}
